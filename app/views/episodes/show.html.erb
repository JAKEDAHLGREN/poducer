<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Back Navigation -->
    <div class="flex justify-between items-center mb-6">
      <%= link_to podcast_episodes_path(@podcast), class: "inline-flex items-center text-orange-600 hover:text-orange-700 font-medium" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Episodes
      <% end %>

      <%= button_to podcast_episode_path(@podcast, @episode),
          method: :delete,
          class: "inline-flex items-center text-red-600 hover:text-red-700 font-medium bg-transparent border-0 p-0",
          data: {
            turbo_confirm: "Are you sure you want to delete this episode? This action cannot be undone."
          } do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      <% end %>
    </div>

    <!-- Main Episode Card -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <!-- Header Section with Audio Visualizer -->
      <div class="relative">
        <div class="aspect-video bg-gradient-to-br from-blue-100 to-blue-200">
          <div class="flex items-center justify-center h-full">
            <div class="text-center">
              <svg class="w-24 h-24 text-blue-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
              </svg>
              <h2 class="text-2xl font-bold text-blue-600">Episode <%= @episode.number %></h2>
            </div>
          </div>
        </div>

        <!-- Status Badge -->
        <div class="absolute top-4 right-4">
          <% case @episode.status %>
          <% when "draft" %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
              Draft
            </span>
          <% when "edit_requested" %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
              Edit Requested
            </span>
          <% when "editing" %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
              Editing
            </span>
          <% when "episode_complete" %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
              Episode Complete
            </span>
          <% when "archived" %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
              Archived
            </span>
          <% end %>
        </div>

        <!-- Episode Number Badge -->
        <div class="absolute top-4 left-4">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
            #<%= @episode.number %>
          </span>
        </div>
      </div>

      <!-- Content Section -->
      <div class="p-8">
        <!-- Episode Title and Basic Info -->
        <div class="mb-6">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">
            <%= @episode.name %>
          </h1>

          <!-- Podcast Info -->
          <div class="flex items-center mb-4">
            <span class="text-sm text-gray-600">From podcast:</span>
            <%= link_to @podcast.name, podcast_path(@podcast), class: "ml-2 text-orange-600 hover:text-orange-700 font-medium" %>
          </div>

          <!-- Stats Row -->
          <div class="flex items-center space-x-6 text-sm text-gray-600">
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <% if @episode.release_date.present? %>
                Release: <%= @episode.release_date.strftime("%B %d, %Y") %>
              <% else %>
                Release date not set
              <% end %>
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Created <%= @episode.created_at.strftime("%B %d, %Y") %>
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Updated <%= @episode.updated_at.strftime("%B %d, %Y") %>
            </div>
          </div>
        </div>

        <!-- Episode Format -->
        <% if @episode.format.present? %>
          <div class="mb-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-3">Format</h2>
            <div class="bg-gray-50 rounded-lg p-4">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                <%= @episode.format %>
              </span>
            </div>
          </div>
        <% end %>

        <!-- Description -->
        <% if @episode.description.present? %>
          <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-3">Description</h2>
            <div class="bg-gray-50 rounded-lg p-4">
              <p class="text-gray-700 leading-relaxed"><%= @episode.description %></p>
            </div>
          </div>
        <% end %>

        <!-- Links/Guests -->
        <% if @episode.links.present? %>
          <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-3">Links & Guests</h2>
            <div class="bg-gray-50 rounded-lg p-4">
              <p class="text-gray-700 leading-relaxed"><%= @episode.links %></p>
            </div>
          </div>
        <% end %>

        <!-- Production Notes -->
        <% if @episode.notes.present? %>
          <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-3">Production Notes</h2>
            <div class="bg-gray-50 rounded-lg p-4">
              <p class="text-gray-700 leading-relaxed"><%= @episode.notes %></p>
            </div>
          </div>
        <% end %>

        <!-- Audio Files Section -->
        <div class="mb-8">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Audio Files</h2>

          <!-- Raw Audio -->
          <div class="bg-gray-50 rounded-lg p-4 mb-4">
            <h3 class="font-medium text-gray-900 mb-2">Raw Audio</h3>
            <% if @episode.raw_audio.attached? %>
              <div class="flex items-center space-x-3">
                <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
                </svg>
                <span class="text-sm text-gray-600"><%= @episode.raw_audio.filename %></span>
                <%= link_to "Download", rails_blob_path(@episode.raw_audio, disposition: "attachment"), class: "text-orange-600 hover:text-orange-700 text-sm font-medium" %>
              </div>
            <% else %>
              <p class="text-gray-500 text-sm">No raw audio file uploaded</p>
            <% end %>
          </div>

          <!-- Edited Audio -->
          <div class="bg-gray-50 rounded-lg p-4 mb-4">
            <h3 class="font-medium text-gray-900 mb-2">Edited Audio</h3>
            <% if @episode.edited_audio.attached? %>
              <div class="flex items-center space-x-3">
                <svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
                </svg>
                <span class="text-sm text-gray-600"><%= @episode.edited_audio.filename %></span>
                <%= link_to "Download", rails_blob_path(@episode.edited_audio, disposition: "attachment"), class: "text-orange-600 hover:text-orange-700 text-sm font-medium" %>
              </div>
            <% else %>
              <p class="text-gray-500 text-sm">No edited audio file uploaded</p>
            <% end %>
          </div>

          <!-- Additional Assets -->
          <% if @episode.assets.attached? %>
            <div class="bg-gray-50 rounded-lg p-4">
              <h3 class="font-medium text-gray-900 mb-2">Additional Assets (<%= @episode.assets.count %>)</h3>
              <div class="space-y-2">
                <% @episode.assets.each do |asset| %>
                  <div class="flex items-center space-x-3">
                    <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"></path>
                    </svg>
                    <span class="text-sm text-gray-600"><%= asset.filename %></span>
                    <%= link_to "Download", rails_blob_path(asset, disposition: "attachment"), class: "text-orange-600 hover:text-orange-700 text-sm font-medium" %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Action Buttons -->
        <div class="flex space-x-4 pt-6 border-t border-gray-200">
          <% if @episode.draft? %>
            <%= link_to edit_podcast_episode_path(@podcast, @episode), class: "flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-3 px-4 rounded-lg text-center transition-colors duration-200" do %>
              <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit Episode
            <% end %>
          <% end %>

          <% if Current.user.user? %>
            <!-- User actions -->
            <% if @episode.can_be_submitted_by_user? %>
              <%= button_to submit_episode_podcast_episode_path(@podcast, @episode),
              method: :patch,
              class: "flex-1 bg-orange-600 hover:bg-orange-700 text-white font-medium py-3 px-4 rounded-lg text-center transition-colors duration-200" do %>
                <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
                </svg>
                Submit for Editing
              <% end %>
            <% end %>

            <% if @episode.edit_requested? %>
              <%= button_to revert_to_draft_podcast_episode_path(@podcast, @episode),
                  method: :patch,
                  class: "flex-1 bg-red-600 hover:bg-red-700 text-white font-medium py-3 px-4 rounded-lg text-center transition-colors duration-200" do %>
                <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
                </svg>
                Revert Episode Status to Draft
              <% end %>
            <% end %>

            <% if @episode.is_complete? %>
              <%= button_to publish_episode_podcast_episode_path(@podcast, @episode),
                  method: :patch,
                  class: "flex-1 bg-green-600 hover:bg-green-700 text-white font-medium py-3 px-4 rounded-lg text-center transition-colors duration-200" do %>
                <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
                </svg>
                Publish Episode
              <% end %>
            <% end %>
          <% elsif Current.user.producer? %>
            <!-- Producer actions -->
            <% if @episode.edit_requested? %>
              <%= button_to start_editing_podcast_episode_path(@podcast, @episode),
                  method: :patch,
                  class: "flex-1 bg-yellow-600 hover:bg-yellow-700 text-white font-medium py-3 px-4 rounded-lg text-center transition-colors duration-200" do %>
                <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
                </svg>
                Start Editing
              <% end %>
            <% elsif @episode.is_editing_in_progress? %>
              <%= button_to complete_editing_podcast_episode_path(@podcast, @episode),
                  method: :patch,
                  class: "flex-1 bg-green-600 hover:bg-green-700 text-white font-medium py-3 px-4 rounded-lg text-center transition-colors duration-200" do %>
                <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
                </svg>
                Complete Editing
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
