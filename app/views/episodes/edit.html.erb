<div class="min-h-screen bg-gray-50 rounded-lg py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Back Navigation -->
    <div class="mb-6">
      <%= link_to podcast_episode_path(@podcast, @episode), class: "inline-flex items-center text-orange-600 hover:text-orange-700 font-medium" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Episode
      <% end %>
    </div>

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Edit Episode</h1>
      <p class="mt-2 text-gray-600">Update episode "<%= @episode.name %>" for "<%= @podcast.name %>"</p>
    </div>

    <!-- Form -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="p-8">
        <%= render "form" %>
      </div>
    </div>
  </div>
</div>
