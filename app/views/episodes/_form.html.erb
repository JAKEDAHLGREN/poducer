<div class="bg-white p-8 rounded-lg shadow-md w-full max-w-2xl">
  <h2 class="text-2xl font-bold mb-6 text-center">Create New Episode</h2>
  <%= form_with model: @episode, url: podcast_episodes_path(@podcast), class: "space-y-4" do |form| %>
    <div class="text-md font-bold">
      Episode Information
      <div class="text-xs font-normal text-gray-500">Provide all the necessary information for this episode.</div>
    </div>

    <%= form.label :name, "Name of Episode", class: "text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "w-full rounded-md border-gray-300 shadow-sm" %>

    <%= form.label :number, "Episode Number", class: "text-sm font-medium text-gray-700" %>
    <%= form.number_field :number, class: "w-full rounded-md border-gray-300 shadow-sm" %>

    <%= form.label :description, "Episode Description", class: "text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 4, class: "w-full rounded-md border-gray-300 shadow-sm" %>

    <%= form.label :links, "Links or Guest names for the Episode", class: "text-sm font-medium text-gray-700" %>
    <%= form.text_field :links, class: "w-full rounded-md border-gray-300 shadow-sm" %>

    <%= form.label :release_date, "Release date", class: "text-sm font-medium text-gray-700" %>
    <%= form.date_field :release_date, class: "w-full rounded-md border-gray-300 shadow-sm" %>

    <div class="text-md font-bold">
      Episode Format & Notes
      <div class="text-xs font-normal text-gray-500">Additional details about the episode format and production notes.</div>
    </div>

    <%= form.label :format, "Episode Format", class: "text-sm font-medium text-gray-700" %>
    <%= form.text_field :format, placeholder: "MP4, MP3, etc.", class: "w-full rounded-md border-gray-300 shadow-sm" %>

    <%= form.label :notes, "Production Notes", class: "text-sm font-medium text-gray-700" %>
    <%= form.text_area :notes, rows: 3, placeholder: "Any additional notes for production team", class: "w-full rounded-md border-gray-300 shadow-sm" %>

    <div class="text-md font-bold">
      Audio Files
      <div class="text-xs font-normal text-gray-500">Upload the raw and edited audio files for this episode.</div>
    </div>

    <%= form.label :raw_audio, "Raw Audio File", class: "text-sm font-medium text-gray-700" %>
    <%= form.file_field :raw_audio, accept: "audio/*", class: "w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-orange-50 file:text-orange-700 hover:file:bg-orange-100" %>

    <%# Don't need this field when creating an episode, this will be after the Producer edits it and uploads it back to the User %>

    <%#= form.label :edited_audio, "Edited Audio File", class: "text-sm font-medium text-gray-700" %>
    <%#= form.file_field :edited_audio, accept: "audio/*", class: "w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-orange-50 file:text-orange-700 hover:file:bg-orange-100" %>

    <%= form.label :assets, "Additional Assets", class: "text-sm font-medium text-gray-700" %>
    <%= form.file_field :assets, multiple: true, class: "w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-orange-50 file:text-orange-700 hover:file:bg-orange-100" %>

    <%= form.submit "Create Episode", class: "w-full bg-orange-600 text-white py-2 rounded hover:bg-orange-700 transition-colors" %>
  <% end %>
</div>
