<div class="fixed left-0 top-0 h-full w-64 bg-white shadow-lg border-r border-gray-200">
  <!-- Logo -->
  <div class="p-6 border-b border-gray-200">
    <div class="flex items-center space-x-2">
      <div class="w-8 h-8 bg-red-500 rounded-full flex items-center justify-center">
        <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 12l2 2 4-4m6 2a9 9 0 0118 0z"/>
        </svg>
      </div>

      <span class="text-xl font-medium text-red-600">PODUCER</span>
    </div>

    <br>

    <div class="flex flex-col gap-1 text-sm text-black">
      <div>Email: <%= Current.user.email %></div>
      <div>Role: <%= Current.user.role.humanize %></div>
      <div>ID: <%= Current.user.id %></div>
    </div>
  </div>

  <!-- Navigation Links -->
  <nav class="mt-6 px-4">
    <div class="space-y-2">
      <% unless Current.user.producer? %>
        <%= link_to dashboards_path, class: sidebar_link_class(dashboards_path) do %>
          Dashboard
        <% end %>
      <% end %>

      <% if Current.user.producer? %>
        <%= link_to producer_episodes_path, class: sidebar_link_class(producer_episodes_path, 'producer/episodes') do %>
          Producer Dashboard
        <% end %>
      <% end %>

      <%= link_to "#", class: "flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-100 transition-colors" do %>
        Edit Requests
      <% end %>

      <%= link_to podcasts_path, class: sidebar_link_class(podcasts_path, 'podcasts') do %>
        Podcasts
      <% end %>

      <%= link_to "#", class: "flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-100 transition-colors" do %>
        Settings
      <% end %>

      <%= link_to "#", class: "flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-100 transition-colors" do %>
        Help
      <% end %>

      <%= button_to "Sign Out", sign_out_path, method: :delete, class: "flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-gray-100 transition-colors" %>
    </div>
  </nav>
</div>
