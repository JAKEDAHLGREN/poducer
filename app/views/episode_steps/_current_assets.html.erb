<% if episode.persisted? && episode.assets.attached? %>
  <h4 class="text-sm font-medium text-gray-900 mb-2">Current Assets (<%= episode.assets.count %>)</h4>
  <div class="space-y-2">
    <% episode.assets.each do |asset| %>
      <div class="flex items-center gap-4 bg-white p-2 rounded">
        <div class="flex items-center gap-2">
          <input
            type="text"
            name="asset_labels[<%= asset.id %>]"
            value="<%= asset.blob.metadata["label"].to_s %>"
            placeholder="Label (e.g., Raw audio, Intro, Outro, Ad read)"
            class="ml-2 w-64 rounded-md border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 text-sm"
            autocomplete="off">
            <span class="text-sm text-orange-600">
              <%= asset.filename %>
            </span>
          </div>
          <%# Optional download link left out intentionally for wizard step %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-sm text-gray-500">No assets uploaded yet.</p>
  <% end %>
