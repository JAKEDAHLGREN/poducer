<div class="min-h-screen rounded-lg px-2 py-8">
  <%= turbo_stream_from @episode %>
  <div class="max-w-7xl px-4 sm:px-6 lg:px-8">
    <%# Back Navigation %>
    <div class="mb-6">
      <%= link_to producer_episodes_path, class: "inline-flex items-center text-orange-600 hover:text-orange-700 font-medium" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>

        Back to Episodes
      <% end %>
    </div>

    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Episode Details</h1>
    </div>

    <!-- Episode Content -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
      <div class="flex flex-col gap-4">
        <!-- Episode Info -->
        <div>
          <div class="flex items-center justify-between">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Episode Information</h2>
            <div class="flex items-center space-x-4">
              <div id="<%= dom_id(@episode, :status) %>">
                <%= render "episodes/status_badge", episode: @episode %>
              </div>
            </div>
          </div>
          <div class="space-y-4">
            <div>
              <div class="text-sm font-medium text-gray-500">Podcast</div>
              <div class="mt-1 text-sm text-gray-900"><%= @episode.podcast.name %></div>
            </div>
            <div>
              <div class="text-sm font-medium text-gray-500">Episode Number</div>
              <div class="mt-1 text-sm text-gray-900"><%= @episode.number %></div>
            </div>
            <div>
              <div class="text-sm font-medium text-gray-500">Title</div>
              <div class="mt-1 text-sm text-gray-900"><%= @episode.name %></div>
            </div>
            <div>
              <div class="text-sm font-medium text-gray-500">Description</div>
              <div class="mt-1 text-sm text-gray-900 break-words leading-relaxed">
                <%= @episode.description %>
              </div>
            </div>
            <div>
              <div class="text-sm font-medium text-gray-500">Release Date</div>
              <div class="mt-1 text-sm text-gray-900"><%= @episode.release_date&.strftime("%B %d, %Y") %></div>
            </div>
            <div>
              <div class="text-sm font-medium text-gray-500">Client</div>
              <div class="mt-1 text-sm text-gray-900"><%= @episode.podcast.user.email %></div>
            </div>
          </div>
        </div>

        <!-- Audio Files -->
        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Audio Files</h2>
          <div class="space-y-4">
            <!-- Raw Audio Download -->
            <% if @episode.raw_audio.attached? %>
              <div class="border border-gray-200 rounded-lg p-4">
                <h3 class="text-sm font-medium text-gray-900 mb-2">Raw Audio</h3>
                <p class="text-sm text-gray-500 mb-2"><%= @episode.raw_audio.filename %></p>
                <%= link_to "Download", rails_blob_path(@episode.raw_audio, disposition: "attachment"),
                    class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
              </div>
            <% else %>
              <div class="border border-gray-200 rounded-lg p-4 bg-gray-50">
                <p class="text-sm text-gray-500">No raw audio file available</p>
              </div>
            <% end %>

            <!-- Edited Audio Upload/Download -->
            <div class="border border-gray-200 rounded-lg p-4">
              <h3 class="text-sm font-medium text-gray-900 mb-2">Edited Audio</h3>
              <% if @episode.edited_audio.attached? %>
                <p class="text-sm text-gray-500 mb-2"><%= @episode.edited_audio.filename %></p>
                <%= link_to "Download", rails_blob_path(@episode.edited_audio, disposition: "attachment"),
                    class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-green-600 hover:bg-green-700 mb-2" %>
              <% else %>
                <p class="text-sm text-gray-500 mb-2">No edited audio uploaded yet</p>
              <% end %>

              <!-- Upload Form -->
              <%= form_with model: [:producer, @episode], local: true, multipart: true do |form| %>
                <div class="mt-2">
                  <%= form.file_field :edited_audio,
                      class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-orange-50 file:text-orange-700 hover:file:bg-orange-100" %>
                </div>
                <div class="mt-3">
                  <%= form.submit "Upload Edited Audio",
                      class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Notes Section -->
      <div class="mt-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Notes</h2>
        <!-- Producer Notes -->
        <%= form_with model: [:producer, @episode], local: true do |form| %>
          <div class="mb-4">
            <%= form.label :notes, "Producer Notes", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :notes,
                value: @episode.notes,
                placeholder: "Any notes about the editing process...",
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 sm:text-sm" %>
          </div>
          <div>
            <%= form.submit "Update Notes", class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700" %>
          </div>
        <% end %>
      </div>

      <!-- Actions -->
      <div class="mt-8 pt-6 border-t border-gray-200">
          <div class="flex items-center justify-end space-x-4">
            <% if @episode.edit_requested? %>
              <div id="<%= dom_id(@episode, :producer_actions) %>" class="w-full">
                <%= render "episodes/producer_actions", episode: @episode %>
              </div>
            <% elsif @episode.editing? || @episode.ready_to_publish? %>
              <div id="<%= dom_id(@episode, :producer_actions) %>" class="w-full">
                <%= render "episodes/producer_actions", episode: @episode, use_producer_namespace: true %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
