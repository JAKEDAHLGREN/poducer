<div class="min-h-screen rounded-lg px-2 py-8">
  <%= turbo_stream_from @episode %>
  <div class="max-w-7xl px-4 sm:px-6 lg:px-8">
    <%# Back Navigation %>
    <div class="mb-6">
      <%= link_to producer_episodes_path, class: "inline-flex items-center text-orange-600 hover:text-orange-700 font-medium" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>

        Back to Episodes
      <% end %>
    </div>

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Episode Details</h1>
    </div>

    <!-- Episode Content -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
      <div class="flex flex-col gap-4">
        <!-- Episode Info -->
        <div>
          <div class="flex items-center justify-between">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Episode Information</h2>
            <div class="flex items-center space-x-4">
              <div id="<%= dom_id(@episode, :status) %>">
                <%= render "episodes/status_badge", episode: @episode %>
              </div>
            </div>
          </div>
          <div class="space-y-4">
            <div>
              <div class="text-sm font-medium text-gray-500">Podcast</div>
              <div class="mt-1 text-sm text-gray-900"><%= @episode.podcast.name %></div>
            </div>
            <div>
              <div class="text-sm font-medium text-gray-500">Episode Number</div>
              <div class="mt-1 text-sm text-gray-900"><%= @episode.number %></div>
            </div>
            <div>
              <div class="text-sm font-medium text-gray-500">Title</div>
              <div class="mt-1 text-sm text-gray-900"><%= @episode.name %></div>
            </div>
            <div>
              <div class="text-sm font-medium text-gray-500">Description</div>
              <div class="mt-1 text-sm text-gray-900 break-words leading-relaxed">
                <%= @episode.description %>
              </div>
            </div>
            <div>
              <div class="text-sm font-medium text-gray-500">Scheduled Release Date</div>
              <div class="mt-1 text-sm text-gray-900"><%= @episode.release_date&.strftime("%B %d, %Y") %></div>
            </div>
            <div>
              <div class="text-sm font-medium text-gray-500">Client</div>
              <div class="mt-1 text-sm text-gray-900"><%= @episode.podcast.user.email %></div>
            </div>
          </div>
        </div>

        <!-- Audio Files -->
        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Uploaded Files</h2>
          <div class="space-y-4">
            <!-- Raw Assets -->
            <div class="border border-gray-200 rounded-lg p-4">

              <% if @episode.assets.attached? %>
                <div class="mt-4">
                  <h4 class="text-sm font-medium text-gray-900 mb-2">Raw Assets (<%= @episode.assets.count %>)</h4>
                  <div class="space-y-2">
                    <% @episode.assets.each do |asset| %>
                      <div class="flex items-center justify-between space-x-3">
                        <div class="flex items-center space-x-3 flex-1 min-w-0">
                          <svg class="w-5 h-5 text-gray-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"></path>
                          </svg>
                          <div class="flex flex-col min-w-0">
                            <span class="text-sm text-gray-600 truncate"><%= asset.filename %></span>
                            <% if asset.blob.metadata["label"].present? %>
                              <span class="text-xs text-gray-500 italic">Label: <%= asset.blob.metadata["label"] %></span>
                            <% end %>
                          </div>
                        </div>
                        <%= link_to "Download", rails_blob_path(asset, disposition: "attachment"),
                            class: "inline-flex items-center px-2 py-1 text-sm font-medium text-orange-600 hover:text-orange-700 flex-shrink-0" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Deliverables Upload -->
            <div class="border border-gray-200 rounded-lg p-4">
              <%= form_with model: [:producer, @episode], local: true, multipart: true do |form| %>
                <%= render "shared/file_upload",
                      form: form,
                      attachment_name: :deliverables,
                      multiple: true,
                      existing_files: @episode.deliverables.attachments,
                      label_param: "deliverable_labels",
                      section_label: "Deliverables",
                      instructions: "Drag and drop all deliverables here, or",
                      hint: "You can select multiple files." %>

                <div class="flex justify-end mt-4">
                  <%= form.submit "+ Upload Deliverables", class: "px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700" %>
                </div>
              <% end %>
            </div>

          </div>
        </div>
      </div>

      <!-- Notes Section -->
      <div class="mt-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Notes</h2>
        <!-- Producer Notes -->
        <%= form_with model: [:producer, @episode], local: true do |form| %>
          <div class="mb-4">
            <%= form.label :notes, "Producer Notes", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :notes,
                value: @episode.notes,
                placeholder: "Any notes about the editing process...",
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 sm:text-sm" %>
          </div>
          <div>
            <%= form.submit "Update Notes", class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700" %>
          </div>
        <% end %>
      </div>

      <!-- Actions -->
      <div class="mt-8 pt-6 border-t border-gray-200">
        <div class="flex items-center justify-end space-x-4">
          <% if @episode.edit_requested? %>
            <div id="<%= dom_id(@episode, :producer_actions) %>" class="w-full">
              <%= render "episodes/producer_actions", episode: @episode, use_producer_namespace: true %>
            </div>
          <% elsif @episode.editing? || @episode.ready_to_publish? %>
            <div id="<%= dom_id(@episode, :producer_actions) %>" class="w-full">
              <%= render "episodes/producer_actions", episode: @episode, use_producer_namespace: true %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
