<% if episode.deliverables.attached? %>
  <div class="space-y-2">
    <% episode.deliverables.each do |asset| %>
      <div class="flex items-center justify-between p-2 bg-white rounded border border-gray-200">
        <div class="flex items-center space-x-3">
          <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"></path>
          </svg>
          <span class="text-sm text-gray-700"><%= asset.filename %></span>
        </div>
        <%= link_to "Download", rails_blob_path(asset, disposition: "attachment"),
            class: "text-orange-600 hover:text-orange-700 text-sm font-medium" %>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-sm text-gray-500">No deliverables uploaded yet.</p>
<% end %>
