    <!-- Ready to Publish Section -->
    <% if @ready_to_publish_episodes.any? %>
      <div class="mb-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Ready to Publish</h2>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
