<div class="min-h-screen rounded-lg px-2 py-8">
  <div class="max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Producer Dashboard</h1>
      <p class="mt-2 text-gray-600">Manage episodes that need your attention</p>
    </div>

    <!-- Stats Cards -->
    <%= render "stats_cards" %>

    <!-- Edit Requests Section -->
    <% if @edit_requested_episodes.any? %>
      <div class="mb-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Episodes Ready for Editing</h2>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Podcast</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Episode</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Submitted</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @edit_requested_episodes.each do |episode| %>
                  <tr class="hover:bg-orange-100 transition-colors duration-150 cursor-pointer" onclick="Turbo.visit('<%= producer_episode_path(episode) %>')">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm font-medium text-gray-900"><%= episode.podcast.name %></div>
                    </td>
                    <td class="px-6 py-4">
                      <div class="text-sm font-medium text-gray-900">Episode <%= episode.number %></div>
                      <div class="text-sm text-gray-500"><%= episode.name %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-gray-900"><%= episode.podcast.user.email %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= episode.updated_at.strftime("%b %d, %Y") %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Currently Editing Section -->
    <% if @editing_episodes.any? %>
      <div class="mb-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Currently Editing</h2>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
