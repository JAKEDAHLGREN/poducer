<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>

<div class="min-h-screen w-full flex items-center justify-center bg-gray-50">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center">Sign In</h2>
    <%= form_with url: sign_in_path, class: "space-y-4" do |f| %>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      <%= f.label :password %>
      <%= f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      <%= f.submit "Continue", class: "w-full bg-indigo-500 text-white py-2 rounded" %>
    <% end %>
    <%= link_to "Forgot Your Password?", new_identity_password_reset_path, class: "block text-center text-indigo-600 mt-4" %>
    <%= link_to "New to Poducer? Create an Account", sign_up_path, class: "block text-center text-indigo-600 mt-2" %>
  </div>
</div>
