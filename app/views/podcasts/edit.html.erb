<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Back Navigation -->
    <div class="mb-6">
      <%= link_to podcast_path(@podcast), class: "inline-flex items-center text-orange-600 hover:text-orange-700 font-medium" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Podcast
      <% end %>
    </div>

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Edit Podcast</h1>
      <p class="mt-2 text-gray-600">Update your podcast information and settings</p>
    </div>

    <!-- Edit Form -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="p-8">
        <%= form_with model: @podcast, class: "space-y-6" do |form| %>
          <!-- Podcast Information Section -->
          <div class="border-b border-gray-200 pb-6">
            <div class="text-lg font-semibold text-gray-900 mb-2">
              Podcast Information
            </div>
            <div class="text-sm text-gray-600 mb-4">
              Provide a title and short description of what your podcast is about.
            </div>

            <div class="grid grid-cols-1 gap-4">
              <div>
                <%= form.label :name, "Name of Podcast", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.text_field :name, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500" %>
                <% if @podcast.errors[:name].any? %>
                  <p class="mt-1 text-sm text-red-600"><%= @podcast.errors[:name].first %></p>
                <% end %>
              </div>

              <div>
                <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.text_area :description, rows: 4, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500" %>
                <% if @podcast.errors[:description].any? %>
                  <p class="mt-1 text-sm text-red-600"><%= @podcast.errors[:description].first %></p>
                <% end %>
              </div>

              <div>
                <%= form.label :cover_art, "Cover Image", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <% if @podcast.cover_art.attached? %>
                  <div class="mb-3">
                    <div class="w-32 h-32 bg-gray-100 rounded-lg overflow-hidden">
                      <%= image_tag @podcast.cover_art, class: "w-full h-full object-cover" %>
                    </div>
                    <p class="text-xs text-gray-500 mt-1">Current cover image</p>
                  </div>
                <% end %>
                <%= form.file_field :cover_art, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500" %>
                <% if @podcast.errors[:cover_art].any? %>
                  <p class="mt-1 text-sm text-red-600"><%= @podcast.errors[:cover_art].first %></p>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Website Section -->
          <div class="border-b border-gray-200 pb-6">
            <div class="text-lg font-semibold text-gray-900 mb-2">
              Podcast Website
            </div>
            <div class="text-sm text-gray-600 mb-4">
              Add your website as a way to promote and share with your listeners.
            </div>

            <div>
              <%= form.label :website_url, "Website URL", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_field :website_url, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500" %>
              <% if @podcast.errors[:website_url].any? %>
                <p class="mt-1 text-sm text-red-600"><%= @podcast.errors[:website_url].first %></p>
              <% end %>
            </div>
          </div>

          <!-- Categories Section -->
          <div class="border-b border-gray-200 pb-6">
            <div class="text-lg font-semibold text-gray-900 mb-2">
              Podcast Categories
            </div>
            <div class="text-sm text-gray-600 mb-4">
              Choose at least one category. This is where your podcast will appear in directories, like Apple Podcast, and is a great way for listeners to find your show.
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <%= form.label :primary_category, "Primary Category", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.text_field :primary_category, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500" %>
                <% if @podcast.errors[:primary_category].any? %>
                  <p class="mt-1 text-sm text-red-600"><%= @podcast.errors[:primary_category].first %></p>
                <% end %>
              </div>

              <div>
                <%= form.label :secondary_category, "Secondary Category (Optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.text_field :secondary_category, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500" %>
                <% if @podcast.errors[:secondary_category].any? %>
                  <p class="mt-1 text-sm text-red-600"><%= @podcast.errors[:secondary_category].first %></p>
                <% end %>
              </div>

              <div>
                <%= form.label :tertiary_category, "Tertiary Category (Optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.text_field :tertiary_category, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500" %>
                <% if @podcast.errors[:tertiary_category].any? %>
                  <p class="mt-1 text-sm text-red-600"><%= @podcast.errors[:tertiary_category].first %></p>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Status Section -->
          <div class="border-b border-gray-200 pb-6">
            <div class="text-lg font-semibold text-gray-900 mb-2">
              Publication Status
            </div>
            <div class="text-sm text-gray-600 mb-4">
              Control the visibility and publication status of your podcast.
            </div>

            <div>
              <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :status, 
                  options_for_select([
                    ['Draft', 'draft'],
                    ['Published', 'published'],
                    ['Archived', 'archived']
                  ], @podcast.status),
                  {},
                  class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500" %>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="flex justify-end space-x-4 pt-6">
            <%= link_to "Cancel", podcast_path(@podcast), class: "px-6 py-3 border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50 transition-colors duration-200" %>
            <%= form.submit "Update Podcast", class: "px-6 py-3 bg-orange-600 hover:bg-orange-700 text-white font-medium rounded-lg transition-colors duration-200" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
