<%= form_with(model: @podcast) do |form| %>
  <% if @podcast.errors.any? %>
    <div>
      <h2><%= pluralize(@podcast.errors.count, "error") %> prevented saving:</h2>
      <ul>
        <% @podcast.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :website_url %>
    <%= form.text_field :website_url %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
