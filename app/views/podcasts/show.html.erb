<div class="min-h-screen bg-gray-50 rounded-lg px-2 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Back Navigation -->
    <div class="flex justify-between items-center mb-6">
      <%= link_to podcasts_path, class: "inline-flex items-center text-orange-600 hover:text-orange-700 font-medium" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Podcasts
      <% end %>

      <%= button_to podcast_path(@podcast),
          method: :delete,
          class: "inline-flex items-center text-red-600 hover:text-red-700 font-medium bg-transparent border-0 p-0",
          data: {
            turbo_confirm: "Are you sure you want to delete this podcast? This action cannot be undone."
          } do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      <% end %>
    </div>

    <!-- Main Podcast Card -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <!-- Header Section with Cover Art -->
      <div class="relative">
        <div class="aspect-video bg-gradient-to-br from-orange-100 to-orange-200">
          <% if @podcast.cover_art.attached? %>
            <%= image_tag @podcast.cover_art, class: "w-full h-full object-cover" %>
          <% else %>
            <div class="flex items-center justify-center h-full">
              <svg class="w-24 h-24 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
              </svg>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Content Section -->
      <div class="p-8">
        <!-- Podcast Title and Basic Info -->
        <div class="mb-6">
          <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @podcast.name %></h1>

          <!-- Categories -->
          <div class="flex flex-wrap gap-2 mb-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
              <%= @podcast.primary_category %>
            </span>
            <% if @podcast.secondary_category.present? %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                <%= @podcast.secondary_category %>
              </span>
            <% end %>
            <% if @podcast.tertiary_category.present? %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                <%= @podcast.tertiary_category %>
              </span>
            <% end %>
          </div>

          <!-- Stats Row -->
          <div class="flex items-center space-x-6 text-sm text-gray-600">
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
              </svg>
              <%= pluralize(@podcast.episodes.count, 'episode') %>
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              Created <%= @podcast.created_at.strftime("%B %d, %Y") %>
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Updated <%= @podcast.updated_at.strftime("%B %d, %Y") %>
            </div>
          </div>
        </div>

        <!-- Description -->
        <% if @podcast.description.present? %>
          <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-3">Description</h2>
            <div class="bg-gray-50 rounded-lg p-4">
              <p class="text-gray-700 leading-relaxed"><%= @podcast.description %></p>
            </div>
          </div>
        <% end %>

        <!-- Website Link -->
        <% if @podcast.website_url.present? %>
          <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-3">Website</h2>
            <%= link_to @podcast.website_url, target: "_blank", class: "inline-flex items-center text-orange-600 hover:text-orange-700 font-medium" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              Visit Website
            <% end %>
          </div>
        <% end %>

        <!-- Episodes Section -->
        <div class="mb-8">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-semibold text-gray-900">Episodes</h2>
            <%= link_to new_podcast_episode_path(@podcast), class: "inline-flex items-center px-3 py-2 bg-orange-600 hover:bg-orange-700 text-white text-sm font-medium rounded-lg transition-colors duration-200" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              Add Episode
            <% end %>
          </div>

          <% if @podcast.episodes.any? %>
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="space-y-3">
                <% @podcast.episodes.order(number: :asc).limit(5).each do |episode| %>
                  <div class="flex items-center justify-between p-3 bg-white rounded-lg border border-gray-200">
                    <div class="flex items-center">
                      <div class="w-8 h-8 bg-orange-100 rounded-full flex items-center justify-center mr-3">
                        <span class="text-orange-600 font-semibold text-sm"><%= episode.number %></span>
                      </div>
                      <div>
                        <h3 class="font-medium text-gray-900"><%= episode.name %></h3>
                        <% if episode.release_date.present? %>
                          <p class="text-sm text-gray-600"><%= episode.release_date.strftime("%B %d, %Y") %></p>
                        <% end %>
                      </div>
                    </div>
                    <div class="flex items-center space-x-2">
                      <% case episode.status %>
                      <% when "draft" %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                          Draft
                        </span>
                      <% when "published" %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          Published
                        </span>
                      <% when "archived" %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                          Archived
                        </span>
                      <% end %>
                      <%= link_to podcast_episode_path(@podcast, episode), class: "text-orange-600 hover:text-orange-700" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>

              <% if @podcast.episodes.count > 5 %>
                <div class="mt-4 text-center">
                  <%= link_to podcast_episodes_path(@podcast), class: "text-orange-600 hover:text-orange-700 font-medium" do %>
                    View all <%= @podcast.episodes.count %> episodes â†’
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="bg-gray-50 rounded-lg p-8 text-center">
              <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
              </svg>
              <h3 class="text-lg font-medium text-gray-900 mb-2">No episodes yet</h3>
              <p class="text-gray-600 mb-4">Start building your podcast by adding your first episode</p>
              <%= link_to new_podcast_episode_path(@podcast), class: "inline-flex items-center px-4 py-2 bg-orange-600 hover:bg-orange-700 text-white font-medium rounded-lg transition-colors duration-200" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Add First Episode
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- Action Buttons -->
        <div class="flex space-x-4 pt-6 border-t border-gray-200">
          <%= link_to podcast_wizard_path(@podcast, :summary), class: "flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-3 px-4 rounded-lg text-center transition-colors duration-200" do %>
            <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Podcast
          <% end %>

          <%= link_to podcast_episodes_path(@podcast), class: "flex-1 bg-orange-600 hover:bg-orange-700 text-white font-medium py-3 px-4 rounded-lg text-center transition-colors duration-200" do %>
            <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
            </svg>
            Manage Episodes
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
