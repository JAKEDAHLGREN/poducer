<%# Select Categories %>

<%= render 'form', locals: { step: step, steps: @steps } do |f| %>
  <%= render "podcast_steps/progress_bar", wizard_steps: @steps %>
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <div class="p-8">
      <div class="field mb-4">
        <%= f.label :primary_category, "Primary Category", class: "block text-md font-medium text-black" %>
        <%= f.select :primary_category, options_for_select(Podcast::CATEGORIES.map { |c| [c, c] }, @podcast.primary_category), { prompt: "Select a category" }, class: "mt-1 block w-full rounded-md shadow-sm focus:ring-orange-500 sm:text-sm #{@podcast.errors[:primary_category].any? ? 'border-red-300 focus:border-red-500 focus:ring-red-500' : 'border-gray-300 focus:border-orange-500'}" %>
        <% @podcast.errors.full_messages_for(:primary_category).each do |message| %>
          <p class="mt-1 text-sm text-red-600"><%= message %></p>
        <% end %>
      </div>
      <div class="field mb-4">
        <%= f.label :secondary_category, "Secondary Category", class: "block text-md font-medium text-black" %>
        <%= f.select :secondary_category, options_for_select(Podcast::CATEGORIES.map { |c| [c, c] }, @podcast.secondary_category), { include_blank: "(optional)" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 sm:text-sm" %>
      </div>
      <div class="field mb-4">
        <%= f.label :tertiary_category, "Tertiary Category", class: "block text-md font-medium text-black" %>
        <%= f.select :tertiary_category, options_for_select(Podcast::CATEGORIES.map { |c| [c, c] }, @podcast.tertiary_category), { include_blank: "(optional)" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 sm:text-sm" %>
      </div>

      <div class="field flex flex-row items-center justify-between space-x-4 mb-4">
        <div class="flex-1">
          <%= f.label :episode_type, class: "block text-md font-medium text-black" %>
          <%= f.select :episode_type, options_for_select(episode_type_options, @podcast.episode_type), { prompt: 'Please select a type' }, class: "mt-1 block w-full rounded-md shadow-sm focus:ring-orange-500 sm:text-sm #{@podcast.errors[:episode_type].any? ? 'border-red-300 focus:border-red-500 focus:ring-red-500' : 'border-gray-300 focus:border-orange-500'}" %>
          <% @podcast.errors.full_messages_for(:episode_type).each do |message| %>
            <p class="mt-1 text-sm text-red-600"><%= message %></p>
          <% end %>
        </div>

        <div class="flex-1">
          <%= f.label :explicit, class: "block text-md font-medium text-black" %>
          <div class="mt-2">
            <label class="inline-flex items-center space-x-2">
              <%= f.check_box :explicit, {}, true, false %>
              <span class="text-sm text-gray-700">Explicit content</span>
            </label>
          </div>
          <% @podcast.errors.full_messages_for(:explicit).each do |message| %>
            <p class="mt-1 text-sm text-red-600"><%= message %></p>
          <% end %>
        </div>

      </div>

    </div>
  </div>
  <%= render "podcast_steps/pagination", f: f, step: step %>
<% end %>
