<ol class="flex flex-row items-center justify-between mt-4 mb-6 text-sm font-medium text-center text-black sm:mt-0 dark:text-white lg:mb-12 sm:text-base">
  <% wizard_steps.each_with_index do |every_step, index| %>

    <li class="items-center inline-flex <%= wizard_step_color(every_step) %>">
      <div class="flex flex-col items-center justify-center">
        <%#= icon("fa-solid", "square-check", class:"text-4xl") %>

        <!-- Show Step + number on mobile screen -->
        <span class="inline-flex sm:hidden">
          Step
          <%= index + 1 %>
        </span>

        <!-- Show step name on sm screen up -->
        <span class="hidden sm:flex">
          <%= every_step.to_s.humanize.titleize %>
        </span>
      </div>
    </li>
  <% end %>
</ol>
