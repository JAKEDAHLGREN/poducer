<div class="mb-8">
  <div class="flex items-center justify-center">
    <% wizard_steps.each_with_index do |every_step, index| %>
      <div class="flex flex-col items-center">
        <!-- Circle for this step -->
        <%= wizard_step_circle(every_step) %>

        <!-- Step name -->
        <span class="mt-3 text-sm <%= wizard_step_color(every_step) %>">
          <%= every_step.to_s.humanize.titleize %>
        </span>
      </div>

      <!-- Connecting line between steps -->
      <%= wizard_step_line(index == wizard_steps.length - 1) %>
    <% end %>
  </div>
</div>
