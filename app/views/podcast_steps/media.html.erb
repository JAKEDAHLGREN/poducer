<%# Add Media %>
<%= render 'form', locals: { step: step, steps: @steps } do |f| %>
  <%= render "podcast_steps/progress_bar", wizard_steps: @steps %>

  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <div class="p-8" data-controller="media-upload" data-media-upload-podcast-id-value="<%= @podcast.id %>">
      <!-- Header Section -->
      <div class="mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-2">MEDIA</h2>
        <p class="text-gray-600">
          Music and an intro outro for your videos is essential for attracting attention,
          building your brand, and ensuring your podcast is presented professionally across
          various platforms and marketing channels.
        </p>
      </div>

      <div class="flex gap-8">
        <!-- Left side - Upload Area -->
        <div class="flex-1">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Upload Cover Image</h3>

          <!-- Drag and Drop Area -->
          <div
            class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center hover:border-gray-400 transition-colors"
            data-media-upload-target="dropZone"
          >
            <!-- Upload Icon -->
            <div class="mb-4">
              <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </div>

            <!-- Upload Text -->
            <p class="text-gray-600 mb-4">Drag & Drop all files.</p>

            <!-- File Input (Hidden) -->
            <%= f.file_field :media,
                multiple: true,
                class: "hidden",
                data: {
                  media_upload_target: "input",
                  action: "change->media-upload#fileSelected"
                } %>

            <!-- Select Files Button -->
            <button
              type="button"
              class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500"
              data-action="click->media-upload#openFileDialog"
              >
              Select Files
            </button>
          </div>
        </div>

        <!-- Right side - Uploaded Assets -->
        <div class="flex-1">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Uploaded Assets</h3>

          <!-- File List Container -->
          <div class="space-y-3" data-media-upload-target="fileList">
            <!-- Existing uploaded files -->
            <% if @podcast.media.any? %>
              <% @podcast.media.each do |media_file| %>
                <div class="flex items-center justify-between p-3 bg-blue-50 border border-blue-200 rounded-lg group">
                  <div class="flex items-center">
                    <!-- File Type Icon -->
                    <div class="flex-shrink-0 mr-3">
                      <div class="w-8 h-8 bg-blue-500 rounded flex items-center justify-center">
                        <span class="text-white text-xs font-bold"><%= media_file.filename.extension.upcase if media_file.filename.extension %></span>
                      </div>
                    </div>
                    <!-- File Name -->
                    <span class="text-sm font-medium text-gray-900"><%= media_file.filename %></span>
                  </div>

                  <!-- Remove Button -->
                  <button
                    type="button"
                    class="flex-shrink-0 w-6 h-6 text-gray-400 hover:text-red-500 transition-colors"
                    data-action="click->media-upload#removeExistingFile"
                    data-file-id="<%= media_file.id %>"
                    title="Remove file"
                    >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                  </button>
                </div>
              <% end %>
            <% end %>

            <!-- New files being uploaded will be added here by JavaScript -->
          </div>

          <!-- Empty State -->
          <div
            data-media-upload-target="emptyState"
            class="text-center text-gray-500 text-sm italic py-8 <%= 'hidden' if @podcast.media.any? %>"
          >
            No files uploaded yet
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= render "podcast_steps/pagination", f: f, step: step %>
<% end %>
