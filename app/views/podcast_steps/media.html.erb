<%# Add Media %>
<%= render 'form', locals: { step: step, steps: @steps } do |f| %>
  <%= render "podcast_steps/progress_bar", wizard_steps: @steps %>
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <div class="p-8">
      <div class="field mb-4">
        <%= f.label :media, "Upload Media Files", class: "block text-md font-medium text-black" %>

        <div class="flex gap-6 mt-4">
          <!-- File input section -->
          <div class="flex-1">
            <%= f.file_field :media,
                multiple: true,
                class: "w-full mt-2 text-sm focus:outline-orange-500 rounded-full text-gray-500 file:mr-4 file:py-2 file:px-6 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-orange-600 file:text-white hover:file:bg-orange-700",
                data: { media_preview_target: "input" } %>

            <p class="mt-2 text-sm text-gray-500">
              Select multiple audio files (MP3, WAV, etc.)
            </p>
          </div>

          <!-- File list section -->
          <div class="flex-1">
            <h4 class="text-sm font-medium text-gray-900 mb-3">Selected Files</h4>

            <!-- Previously uploaded files -->
            <div id="existing-files" class="space-y-2 mb-4">
              <% if @podcast.media.any? %>
                <% @podcast.media.each_with_index do |media_file, index| %>
                  <div class="flex items-center justify-between p-3 bg-green-50 border border-green-200 rounded-lg">
                    <div class="flex items-center">
                      <svg class="h-5 w-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="9 12l2 2 4-4"></path>
                      </svg>
                      <span class="text-sm text-gray-700"><%= media_file.filename %></span>
                    </div>
                    <span class="text-xs text-green-600 font-medium">Uploaded</span>
                  </div>
                <% end %>
              <% end %>
            </div>

            <!-- New file previews -->
            <div data-media-preview-target="previews" id="file-previews" class="space-y-2">
              <!-- New files will be added here by JavaScript -->
            </div>

            <div id="no-files-message" class="text-sm text-gray-400 italic <%= 'hidden' if @podcast.media.any? %>">
              No files selected yet
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render "podcast_steps/pagination", f: f, step: step %>
<% end %>
