<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>

<div class="min-h-screen w-full flex items-center justify-center bg-gray-50">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center">Forgot Your Password?</h2>

    <%= form_with(url: identity_password_reset_path, class: "space-y-4") do |form| %>
      <div>
        <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>

      <div>
        <%= form.submit "Send Password Reset Email", class: "w-full bg-indigo-500 text-white py-2 rounded" %>
      </div>
    <% end %>

    <%= link_to "Back to Sign In", sign_in_path, class: "block text-center text-indigo-600 mt-4" %>
  </div>
</div>
